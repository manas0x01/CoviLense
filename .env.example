# CoviLense Environment Configuration
# Copy this file to .env.local for development

# Application Settings
NODE_ENV=development
NEXT_PUBLIC_APP_NAME=CoviLense
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Elasticsearch Configuration
ELASTICSEARCH_HOST=localhost:9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=changeme
ELASTICSEARCH_INDEX_PATTERN=logs-*,winlogbeat-*,auditbeat-*
ELASTICSEARCH_MAX_RESULTS=10000
ELASTICSEARCH_TIMEOUT=30
ELASTICSEARCH_SSL_ENABLED=false

# Wazuh Configuration (Alternative to Elasticsearch)
WAZUH_API_HOST=localhost:55000
WAZUH_API_USERNAME=wazuh
WAZUH_API_PASSWORD=wazuh
WAZUH_SSL_ENABLED=false

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.3
OPENAI_MAX_TOKENS=2048

# Alternative: Anthropic Claude
ANTHROPIC_API_KEY=your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-sonnet

# Alternative: Local LLM (Ollama)
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama2:7b

# Database Configuration
DATABASE_URL=postgresql://covilense:password@localhost:5432/covilense
DATABASE_SSL=false

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=""
REDIS_DB=0

# Session & Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
SESSION_SECRET=your-session-secret-key
ENCRYPTION_KEY=your-32-character-encryption-key
SESSION_TIMEOUT=3600

# Authentication
AUTH_PROVIDER=local
OAUTH_GOOGLE_CLIENT_ID=your-google-oauth-client-id
OAUTH_GOOGLE_CLIENT_SECRET=your-google-oauth-secret
OAUTH_MICROSOFT_CLIENT_ID=your-microsoft-oauth-client-id
OAUTH_MICROSOFT_CLIENT_SECRET=your-microsoft-oauth-secret

# LDAP Configuration (for enterprise)
LDAP_HOST=ldap://your-ldap-server:389
LDAP_BIND_DN=cn=admin,dc=example,dc=com
LDAP_BIND_PASSWORD=admin-password
LDAP_SEARCH_BASE=ou=users,dc=example,dc=com

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@covilense.com

# Slack Integration
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_CHANNEL=#security-alerts

# Microsoft Teams Integration
TEAMS_WEBHOOK_URL=https://outlook.office.com/webhook/your-webhook-url

# Monitoring & Logging
LOG_LEVEL=info
LOG_FILE=logs/covilense.log
ENABLE_METRICS=true
PROMETHEUS_PORT=9090

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Settings
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=.pdf,.csv,.json,.xml

# Feature Flags
ENABLE_THREAT_INTELLIGENCE=true
ENABLE_AUTOMATED_REPORTS=true
ENABLE_MULTI_TENANT=false
ENABLE_ADVANCED_ANALYTICS=true

# Development Settings
DEBUG=false
ENABLE_CORS=true
CORS_ORIGIN=http://localhost:3000

# Production Settings (only set in production)
# SENTRY_DSN=your-sentry-dsn-for-error-tracking
# SENTRY_ENVIRONMENT=production

# Security Headers
ENABLE_CSP=true
ENABLE_HSTS=true
ENABLE_X_FRAME_OPTIONS=true

# API Versioning
API_VERSION=v1
API_PREFIX=/api

# Cache Settings
CACHE_TTL=300
ENABLE_QUERY_CACHE=true

# Background Jobs
ENABLE_BACKGROUND_JOBS=true
JOB_CONCURRENCY=5

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/backups

# External Integrations
MISP_URL=https://your-misp-instance.com
MISP_API_KEY=your-misp-api-key
VIRUSTOTAL_API_KEY=your-virustotal-api-key

# Custom Configuration
ORGANIZATION_NAME="Indian Space Research Organisation (ISRO)"
ORGANIZATION_DOMAIN=isro.gov.in
SUPPORT_EMAIL=support@isro.gov.in
ADMIN_EMAIL=admin@isro.gov.in